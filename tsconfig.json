{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "rootDir": "./src",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": [
		"./src"
	],
    "exclude": [
        "**/__tests__/*"
    ]
}